<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://xml.util.cbsviewer.mineleni.nl" xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
	jxb:version="2.0" attributeFormDefault="unqualified"
	elementFormDefault="qualified" xmlns:l="http://xml.util.cbsviewer.mineleni.nl">
	
	<xs:element name="Layers" type="l:layersList">
		<xs:annotation>
			<xs:documentation>Beschrijft een verzameling van kaartlagen.
			</xs:documentation>
		</xs:annotation>
	</xs:element>

	<xs:complexType name="layersList">
		<xs:sequence>
			<xs:element name="Layerdescriptor" type="l:layerDescriptor"
				maxOccurs="unbounded" minOccurs="1" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="layerDescriptor">
		<xs:annotation>
			<xs:documentation>Beschrijft een kaart laag voor de applicatie. Een
				laag kan bestaan uit 1 of meer lagen van 1 WMS.</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element type="xs:string" name="id" nillable="false"
				minOccurs="1" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>unieke identifier van deze kaartlaag
					</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element type="xs:string" name="name" nillable="false"
				minOccurs="1" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>beschrijvende naam van deze kaartlaag
					</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element type="xs:string" name="layers" nillable="false"
				minOccurs="1" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>Een kommagescheiden string met een of meer namen
						van de LAYERS van de WMS</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element type="xs:anyURI" name="url" nillable="false"
				minOccurs="1" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>De base URL van de WMS waar deze kaartlaag uit
						opgebouwd wordt.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element type="xs:string" name="styles" nillable="false"
				minOccurs="1" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>De lijst met STYLES, een kommagescheiden string
						met een of meer namen van de styles van de WMS. Het aantal moet
						gelijk zijn aan het aantal lagen.</xs:documentation>
				</xs:annotation>
			</xs:element>
			<xs:element type="xs:string" name="attributes" nillable="false"
				minOccurs="1" maxOccurs="1">
				<xs:annotation>
					<xs:documentation>De te tonen feature attributen als resultaat van
						een FeatureInfo request. Kommagescheiden.</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:schema>